  <!-- 配置过滤器 -->
  <filter>
  	<filter-name>myfilter</filter-name>
  	<filter-class>cn.tedu.web.MyFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>myfilter</filter-name>
  	<url-pattern>/photos/img.png</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>access</filter-name>
  	<filter-class>cn.tedu.web.AccessFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>access</filter-name>
  	<url-pattern>/photos/img.png</url-pattern>
  	<url-pattern>/SendActionServlet</url-pattern>
  	<url-pattern>/UpdateActionServlet</url-pattern>
  	<url-pattern>/DeleteActionServlet</url-pattern>
  	<url-pattern>/article/*</url-pattern>
  	<!-- /article/addServlet  /article/deleteServlet ...-->
  </filter-mapping>
  
  <filter>
  	<filter-name>encoding</filter-name>
  	<filter-class>cn.tedu.web.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>encoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
